   <xs:keyref name="documentationIdKeyRef3" refer="rdml:documentationIdKey">
     <xs:selector xpath="./rdml:thermalCyclingCondition" />
     <xs:field xpath="rdml:documentationId" />
   </xs:keyref>
   <xs:keyref name="documentationIdKeyRef4" refer="rdml:documentationIdKey">
