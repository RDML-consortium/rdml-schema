     <xs:element name="lidTemperature" type="xs:float" minOccurs="0"/>
     <xs:element name="experimenterId" type="rdml:idType" minOccurs="0" maxOccurs="unbounded"/>
     <xs:element name="step" type="rdml:stepType" maxOccurs="unbounded" />
   </xs:sequence>
 </xs:complexType>

 <xs:complexType name="thirdPartyExtensionsType">
   <xs:sequence>
     <xs:any maxOccurs="unbounded" minOccurs="0"/>
   </xs:sequence>
 </xs:complexType>

 <xs:complexType name="wellType">
   <xs:sequence>
     <xs:element name="id" type="rdml:idType"/>
     <xs:element name="sampleId" type="rdml:idType"/>
     <xs:element name="data" type="rdml:dataType" maxOccurs="unbounded"/>
   </xs:sequence>
 </xs:complexType>

 <xs:complexType name="xRefType">
   <xs:sequence>
     <xs:element name="name" type="xs:string" minOccurs="0"/>
     <xs:element name="id" type="xs:string" minOccurs="0"/>
   </xs:sequence>
 </xs:complexType>

 <xs:element name="rdml">
